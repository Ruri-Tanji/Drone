<div class="container">
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" style="background-color: #006633;">
        <div class="container-fluid">
            <h1 class="navbar-brand">楽楽会議</h1>
            <div class="navbar-nav">
                <p class="text-white">自分のユーザー名 "{{userName}}"</p>
            </div>
        </div>
    </nav>
    <div class="room-submit">
        <input id="userName" type="hidden" value={{userName}}>
        <button type="button" class="btn btn-success" onclick="connect();">
            <img src="/img/publish.png" height="23" width="23">接続
        </button>
        <button type="button" class="btn btn-success" onclick="takeoff();">
            <img src="/img/publish.png" height="23" width="23">離陸
        </button>
        <button type="button" class="btn btn-success" onclick="land();">
            <img src="/img/publish.png" height="23" width="23">着陸
        </button>
        <button type="button" class="btn btn-success" onclick="forward();">
            <img src="/img/publish.png" height="23" width="23">前進
        </button>
        <button type="button" class="btn btn-success" onclick="backward();">
            <img src="/img/publish.png" height="23" width="23">後退
        </button>
        <button type="button" class="btn btn-success" onclick="up();">
            <img src="/img/publish.png" height="23" width="23">上昇
        </button>
        <button type="button" class="btn btn-success" onclick="down();">
            <img src="/img/publish.png" height="23" width="23">下降
        </button>
        <button type="button" class="btn btn-success" onclick="turnRight();">
            <img src="/img/publish.png" height="23" width="23">右旋回
        </button>
        <button type="button" class="btn btn-success" onclick="turnLeft();">
            <img src="/img/publish.png" height="23" width="23">左旋回
        </button>
        <button type="button" class="btn btn-success" onclick="right();">
            <img src="/img/publish.png" height="23" width="23">右
        </button>
        <button type="button" class="btn btn-success" onclick="left();">
            <img src="/img/publish.png" height="23" width="23">左
        </button>

        <div class="room-exit">
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            <button type="button" class="btn btn-danger" onclick="exit();">
                <img src="/img/logout.png" height="23" width="23">退室する
            </button>
        </div>
    </div>

    <script src="/javascripts/socket.js"></script>
    <script src="/javascripts/enter.js"></script>
    <script src="/javascripts/exit.js"></script>
    <script src="/javascripts/flight.js"></script>
